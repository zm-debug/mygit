<Window x:Class="WpfApp1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <DataGrid x:Name="dg1" Margin="10" MinHeight="200" >
            </DataGrid>
            <StackPanel Orientation="Horizontal">
                <Label Name="lb1" MinWidth="100" Margin="10"/>
                <Label Name="lb2" MinWidth="100" Margin="10"/>
                <Label Name="lb3" MinWidth="100" Margin="10"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="上一页" Margin="5" Width="100" Click="Button_Click"/>
                <Button Content="下一页" Margin="5" Width="100" Click="Button_Click_1"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
